{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "CV info schema",
	"type": "object",
	"properties": {
		"fullName": {
			"type": "string"
		},
		"selfDescription": {
			"type": "string"
		},
		"positionTitle": {
			"type": "string"
		},
		"contact": {
			"type": "object",
			"properties": {
				"email": {
					"type": "string"
				},
				"phoneNumber": {
					"type": "string"
				},
				"links": {
					"type": "object",
					"properties": {
						"linkedIn": {
							"type": "string"
						},
						"github": {
							"type": "string"
						},
						"web": {
							"type": "string"
						}
					},
					"required": ["github", "linkedIn", "web"]
				}
			},
			"required": ["email", "links", "phoneNumber"]
		},
		"hardSkills": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"softSkills": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"jobExperiences": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"position": {
						"type": "string"
					},
					"company": {
						"type": "string"
					},
					"fromToLabel": {
						"type": "string"
					},
					"description": {
						"type": "string"
					}
				}
			}
		},
		"hobbies": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"label": {
						"type": "string"
					},
					"description": {
						"type": "string"
					}
				}
			}
		}
	}
}
