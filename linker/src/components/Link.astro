---
export interface Props {
	href: string
	label: string
	imagePath: string
	backgroundColor: string
	color: string
}

const { href, label, imagePath, backgroundColor, color } = Astro.props

const inlineStyles = `background-color: ${backgroundColor}; color: ${color};`
---

<a class="link" href={href} target="_blank" style={inlineStyles}
	><img src={imagePath} /> {label}</a
>

<style>
	.link {
		padding: 10px 8px;
		border-radius: 5px;
		text-decoration: none;
		text-decoration: '';
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.link:hover {
		cursor: pointer;
	}

	.link img {
		position: relative;
		top: 4px;
		width: 20px;
	}
</style>
